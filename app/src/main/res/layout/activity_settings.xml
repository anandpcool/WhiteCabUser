<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        >


        <ImageView
            android:id="@+id/back_settings"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/ten_dp"
            android:padding="@dimen/five"
            android:layout_centerInParent="true"
            android:src="@drawable/back_black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            />


    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/one_five"
                android:background="@color/lightGrey"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/one_five"
                    />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/one_five"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/five"
                >

                <ImageView
                    android:id="@+id/img_name"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/spacing_very_tiny"
                    android:layout_marginStart="@dimen/one_five"
                    android:src="@drawable/ic_setting_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_toEndOf="@+id/img_name"
                    android:layout_marginStart="@dimen/ten_dp"
                    />

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toEndOf="@+id/img_name"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_below="@+id/img_name"
                    android:layout_marginTop="@dimen/five"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"
                    android:layout_below="@+id/et_user_name"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/one_five"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/five"
                >

                <ImageView
                    android:id="@+id/img_mobile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/one_five"
                    android:layout_marginTop="@dimen/spacing_very_tiny"
                    android:src="@drawable/ic_mobile_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_toEndOf="@+id/img_mobile"
                    android:layout_marginStart="@dimen/ten_dp"
                    />

                <EditText
                    android:id="@+id/et_user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toEndOf="@+id/img_mobile"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_below="@+id/img_mobile"
                    android:layout_marginTop="@dimen/five"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"
                    android:layout_below="@+id/et_user_mobile"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/one_five"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/five"
                >

                <ImageView
                    android:id="@+id/img_mail"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/one_five"
                    android:layout_marginTop="@dimen/spacing_very_tiny"
                    android:src="@drawable/ic_mail_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_toEndOf="@+id/img_mail"
                    android:layout_marginStart="@dimen/ten_dp"
                    />

                <EditText
                    android:id="@+id/et_user_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toEndOf="@+id/img_mail"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_below="@+id/img_mail"
                    android:layout_marginTop="@dimen/five"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"
                    android:layout_below="@+id/et_user_mail"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/one_five"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/ten_dp"
                >

                <ImageView
                    android:id="@+id/img_password"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/spacing_very_tiny"
                    android:layout_marginStart="@dimen/one_five"
                    android:src="@drawable/ic_lock_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_toEndOf="@+id/img_password"
                    android:layout_marginStart="@dimen/ten_dp"
                    />

                <TextView
                    android:id="@+id/tv_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="textPassword"
                    android:layout_toEndOf="@+id/img_password"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_below="@+id/img_password"
                    android:layout_marginTop="@dimen/five"
                    />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/one_five"
                android:background="@color/lightGrey"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/one_five"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/ten_dp"
                >

                <ImageView
                    android:id="@+id/img_manage_card"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/spacing_very_tiny"
                    android:layout_marginStart="@dimen/one_five"
                    android:src="@drawable/cvv_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_cards"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_toEndOf="@+id/img_manage_card"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_centerInParent="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"
                    android:layout_below="@+id/img_manage_card"
                    android:layout_marginTop="@dimen/normal"
                    android:layout_marginStart="@dimen/one_five"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/ten_dp"
                >

                <ImageView
                    android:id="@+id/img_rate_app"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/spacing_very_tiny"
                    android:layout_marginStart="@dimen/one_five"
                    android:src="@drawable/star_white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_app"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_toEndOf="@+id/img_rate_app"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_centerInParent="true"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/one_five"
                android:background="@color/lightGrey"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/one_five"
                    />



            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginStart="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.07"
                android:layout_marginTop="@dimen/five"
                android:layout_marginStart="25dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="@dimen/one_five"
                android:layout_marginStart="25dp"
                />

            <TextView
                android:id="@+id/tv_terms_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_condition"
                android:textColor="@color/light_black"
                android:layout_marginTop="@dimen/one_five"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginStart="25dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="@dimen/one_five"
                android:layout_marginStart="25dp"
                />

            <TextView
                android:id="@+id/tv_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginTop="@dimen/one_five"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="@dimen/ten_dp"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>