<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_dialog_background"
    >

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="@dimen/normal"
        android:layout_height="@dimen/normal"
        android:src="@drawable/ic_cancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/normal"
        android:layout_marginTop="@dimen/one_five"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal"
        android:layout_marginEnd="@dimen/normal"
        android:layout_marginTop="@dimen/one_five"
        android:orientation="vertical"
        android:id="@+id/ll_promo"
        android:visibility="visible"
        android:layout_below="@+id/img_cancel"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/promo_code"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/five"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="WHITE254"
                />

            <ImageView
                android:layout_width="@dimen/two_five"
                android:layout_height="@dimen/two_five"
                android:src="@drawable/cancel_gray"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginEnd="@dimen/five"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceing_large_x"
            android:layout_marginBottom="@dimen/spacing_xlarge"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/please_enter_promo"
                />

            <ImageView
                android:id="@+id/promo_button"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>